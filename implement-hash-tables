class HashTable():
    # ==========================
    def __init__(self, size):
        self.size = size
        self.data = [None] * self.size

    def __str__(self):
        return str(self.__dict__)
        # creates unique gibberish

    def _hash(self, key):
        hash = 0

        for i in range(len(key)):
            hash = (hash + ord(key[i])*i) % self.size

        return hash

    # ==========================
    def set(self, key, value):
        # store key of grapes using our hash function
        hash = self._hash(key)
        # if grapes key address does not exist, add that data at address
        # of array containing key and value
        if not self.data[hash]:
            self.data[hash] = [[key, value]]
        else:
            self.data[hash].append([key, value])
    # grab first array then 0 index within array, which grabs the values

    def get(self, key):
        hash = self._hash(key)
        if self.data[hash]:
            for i in range(len(self.data[hash])):
                # if a match is found with the key, then return first index which is the value
                if self.data[hash][i][0] == key:
                    return self.data[hash][i][1]
        return None  # if nothing is in the bucket

    # ==========================
    def keys(self):
        keys_array = []
        for i in range(self.size):
            if self.data[i]:
                if len(self.data[i]) > 1:
                    for j in range(len(self.data[i])):
                        keys_array.append(self.data[i][j][0])
                else:
                    keys_array.append(self.data[i][0][0])
        return keys_array

    def values(self):
        values_array = []
        for i in range(self.size):
            if self.data[i]:
                for j in range(len(self.data[i])):
                    # Only difference from the keys function is instead of appending the first element, we are appending the last element of each list
                    values_array.append(self.data[i][j][1])
        return values_array


new_hash = HashTable(50)

new_hash.set('grapes', 10000)
new_hash.set('apples', 54)
new_hash.set('oranges', 2)

print(new_hash.keys())
print(new_hash.values())
